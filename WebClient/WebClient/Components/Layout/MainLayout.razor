            @* <div class="dropdown dropdown-end pl-4"> *@
            @*     <div tabindex="0" *@
            @*          class="dropdown-content bg-base-100 rounded-box z-1 mt-3 w-96 p-2 shadow"> *@
            @*         <CalendarComponent/> *@
            @*     </div> *@
            @* </div> *@
            <div class="dropdown dropdown-end pl-4">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle btn-sm avatar">
                    <UserProfileImage/>
                </div>
                <ul tabindex="0"
                    class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-32 p-2 shadow">
                    <li>
                        <NavLink href="/Profile/Index" class="text-right">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
